extends ./main

block message
   h5(style='font-size:2em;')
       p #{ greeting+", "+name+" "+msg } 
   h5.mt-4.text-muted.text-italic(style='font-size:1.5em;')= warning
   a.btn.btn-primary(href=link style='color:white;font-size:1.8em;display:block;')= link_button
   small.text-muted(style='display:block;') #{ link }

